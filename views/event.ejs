<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="css/main.css">
    <script src="slideshow.js" type="text/javascript"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="sockets.js" type="text/javascript"></script>
  </head>
  <body>
    <form action="/events/<%=event._id%>" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <h2> <%=event.eventName%>
      <input type="text" name="name" value="<%=event.eventName%>">
      <input type="submit" value="Edit"> </h2>
      <p>Creator: <%=event.creator%></p>
      <p>Date: <%=event.creationDate%></p>
      <p>Members: <%=event.members%></p>
    </form>
    <form action="/events/<%=event._id%>" method="POST" encType="multipart/form-data">
      <input name="sampleFile" type="file"/>
      <input type="submit" value="Add Photo">
    </form>
    <form action="" id="add">
      <input id="m" autocomplete="off" placeholder="message"/><button>Send</button>
      <input id="n" autocomplete="off" placeholder="name"/>
    </form>
    <div><%event.photos.forEach((photo)=> {%>
      <a href="/events/photo">
      <img src="Images/<%=event._id%>/<%=photo%>" height="150px" class="mySlides">
      </a>
    <%})%>
  </div>
    <button id='button'>View Slideshow</button>
    <button id='stop'>Stop Slideshow</button>
      <ul id="messages"></ul>
    <audio id="party" src="sounds/party.mp4" preload="auto"></audio>
    <p> <a href="/events"><b>Back to event List</b></a>  ||
    <a href="/"><b>Back to Home</b></a></p>
  </body>
</html>
